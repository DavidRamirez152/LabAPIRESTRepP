@model IEnumerable<EmployeeViewModel>

@{
    ViewBag.Title = "List of Employees";
}

<h2>List of Employees</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>Position</th>
                <!-- Agrega más encabezados de columna según tu modelo employeeViewModel -->
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@employee.Position</td>
                    <!-- Agrega más columnas según tu modelo employeeViewModel -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No Employees found.</p>
}
